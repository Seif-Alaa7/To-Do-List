@model List

<form action="/ToDoItems/SaveEdit" method="post">
    <input type="hidden" name="Id" value="@Model.Id">

    <div class="mb-3">
        <label for="Name" class="form-label">Name</label>
        <input type="text" class="form-control" id="Name" name="Name" value="@Model.Name">
    </div>

    <div class="mb-3">
        <label for="Description" class="form-label">Description</label>
        <input type="text" class="form-control" id="Description" name="Description" value="@Model.Description">
    </div>

    <div class="mb-3">
        <label for="Title" class="form-label">Title</label>
        <input type="text" class="form-control" id="Title" name="Title" value="@Model.Title">
    </div>

    <div class="mb-3">
        <label for="Deadline" class="form-label">Deadline</label>
        <input type="datetime" class="form-control" id="Deadline" name="Deadline" value="@Model.Deadline">
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
</form>